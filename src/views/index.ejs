<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Si pinta, Pinta</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/styles.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/d9380e76ff.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="css/homeb.css" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="body">
    <%- include("./partials/header",{titulo:"home"}) %>

    <main class="main-homeb">
      <section>
        <h2>Ofertas</h2>
        <div class="Oferts">
          <div class="products">
            <% product.forEach(product=> { %>
            <article class="product">
              <a href="/products/productDetail/<%= product.id %>">
                
                <div class="imgProduct">
                  <img src="img/products/<%= product.image %>" />

                </div>
              </a>

              <div class="descriptiveSet">
                <h4><%= product.name %></h4>
                <strong class="price"
                  >$<%= product.price %> | <%= product.discount %>% Off</strong
                >
                <!-- <form action="/products/productCart"> -->
                <a href="/products/productCart/ <%= product.id %> " class="add-cart">AÃ±adir al carrito</a>
                <!-- </form>  -->
              </div>
            </article>
            <% }); %>
          </div>
        </div>
      </section>
    </main>
    
  </body>
  <%- include("./partials/footer.ejs") %>
</html>
